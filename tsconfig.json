{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"lib": ["DOM", "ESNext"],
		"moduleResolution": "node",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"noUnusedLocals": true,
		"outDir": "./dist",
		"rootDir": "./src"
	},
	"include": ["src/**/*.ts"]
}
