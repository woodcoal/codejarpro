{
	"plugins": {
		"@release-it/conventional-changelog": {
			"preset": "angular",
			"infile": "CHANGELOG.md"
		}
	},
	"git": {
		"requireCleanWorkingDir": true,
		"commitMessage": "chore(release): ${version}",
		"tagName": "v${version}"
	},
	"github": {
		"release": true,
		"releaseName": "Release ${version}"
	},
	"npm": {
		"publish": true
	},
	"hooks": {
		"after:bump": "npm run build"
	}
}
