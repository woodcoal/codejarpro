{
	"name": "codejarpro",
	"description": "A powerful, extensible code editor for the browser. Based on CodeJar with plugins, line numbers and more.",
	"version": "1.25.909",
	"license": "MIT",
	"repository": "https://github.com/woodcoal/codejarpro",
	"author": "木炭 <i@wodocoal.cn>; Anton Medvedev <anton@medv.io>",
	"homepage": "https://github.com/woodcoal/codejarpro",
	"private": false,
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		},
		"./plugins": {
			"types": "./dist/plugins/index.d.ts",
			"import": "./dist/plugins/index.js",
			"require": "./dist/plugins/index.cjs"
		}
	},
	"files": [
		"dist",
		"README.md",
		"README_CN.md"
	],
	"scripts": {
		"dev": "tsup --watch",
		"chk": "tsc --noEmit",
		"build": "tsc --noEmit && tsup",
		"release": "release-it",
		"release:patch": "release-it patch"
	},
	"devDependencies": {
		"@release-it/conventional-changelog": "^10.0.1",
		"release-it": "^19.0.4",
		"tsup": "^8.5.0",
		"typescript": "^5.9.2"
	}
}
